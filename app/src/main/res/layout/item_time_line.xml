<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--左边 时间-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="45dp"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_tv_time"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="10:12"
            android:textColor="#333" />

        <TextView
            android:id="@+id/item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上午"
            android:textColor="#333"
            android:textSize="12sp" />
    </LinearLayout>

    <!--中间 时间轴-->
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_line_one"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:src="@color/c_8b8b8b" />

        <ImageView
            android:id="@+id/item_img_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/shape_circle_gray"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/item_img_status_node"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/shape_circle_gray"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_line_two"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@color/c_8b8b8b" />

    </LinearLayout> <!--右边 信息-->

    <TextView
        android:id="@+id/item_tv_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:paddingTop="22dp"
        android:paddingBottom="25dp"
        android:text="材料审核通过"
        android:textColor="@color/c_8b8b8b"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/item_tv_status_node"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:gravity="center|start"
        android:paddingTop="20dp"
        android:paddingBottom="25dp"
        android:textColor="@color/c_8b8b8b"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>
